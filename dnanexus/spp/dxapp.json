{
  "name": "spp",
  "title": "SPP",
  "summary": "SPP Peak Caller",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "ENCODE Analysis Pipeline"
  ],
  "inputSpec": [
    {
      "name": "experiment",
      "label": "ChIP tagAlign",
      "class": "file",
      "optional": false
    },
    {
      "name": "control",
      "label": "Input or IgG control tagAlign",
      "class": "file",
      "optional": false
    },
    {
      "name": "xcor_scores_input",
      "label": "Cross-correlation scores file from previous pipeline step",
      "class": "file",
      "optional": false
    },
    {
      "name": "npeaks",
      "label": "Maximum number of peaks to call",
      "class": "int",
      "optional": true,
      "default": 300000
    },
    {
      "name": "nodups",
      "label": "Have duplicates been removed from the input tag file",
      "class": "boolean",
      "optional": true,
      "default": true
    },
    {
      "name": "bigbed",
      "label": "Generate bigBed files",
      "class": "boolean",
      "optional": true,
      "default": false
    },
    {
      "name": "chrom_sizes",
      "label": "chrom.sizes file for bedToBigBed",
      "class": "file",
      "optional": true
    },
    {
      "name": "as_file",
      "label": ".as file for bedToBigBed",
      "class": "file",
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "peaks",
      "label": "Narrowpeaks file",
      "class": "file"
    },
    {
      "name": "xcor_plot",
      "label": "Cross-correlation plot",
      "class": "file"
    },
    {
      "name": "xcor_scores",
      "label": "Cross-correlation scores",
      "class": "file"
    },
    {
      "name": "peaks_bb",
      "label": "bigBed file",
      "class": "file",
      "optional": true
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/spp.py",
    "systemRequirements": {
      "main":     {"instanceType": "mem3_ssd1_x4"}
    },
    "execDepends": [
      {"name": "libboost1.46-dev"},
      {"name": "libboost-dev"},
      {"name": "caTools", "package_manager": "cran"},
      {"name": "snow", "package_manager": "cran"}
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "authorizedUsers": []
}
